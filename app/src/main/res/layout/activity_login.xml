<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_dport_driver"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Email, No. Telepon"
        android:textStyle="italic"
        android:textSize="14dp"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/logo_dport_driver"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Kata sandi"
        android:textStyle="italic"
        android:textSize="14dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        />


    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Kata Sandi?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:layout_marginRight="38dp"
        android:layout_marginTop="7dp"
        android:textSize="10sp"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_log"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Masuk"
        app:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="98dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginRight="98dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgot_password"/>

    <TextView
        android:id="@+id/lbl_belum_punya_akun_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya Akun?"
        app:layout_constraintTop_toBottomOf="@id/btn_login_log"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginTop="85dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        app:layout_constraintTop_toBottomOf="@id/btn_login_log"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:layout_marginTop="85dp"
        app:layout_constraintStart_toEndOf="@+id/lbl_belum_punya_akun_log"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lbl_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="v2.0"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Engined by Bisnis Integrasi Global"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_version" />


</androidx.constraintlayout.widget.ConstraintLayout>