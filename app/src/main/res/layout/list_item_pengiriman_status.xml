<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_list_pengiriman"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="50"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_dot_muat"
                        android:layout_width="0px"
                        android:layout_height="5dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/txt_kota_asal_pengiriman"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="23"
                        android:text="Jakarta (JKT)"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/lbl_dash_kota"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="-"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/iv_dot_tujuan_pengiriman"
                        android:layout_width="0px"
                        android:layout_height="5dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <TextView
                        android:id="@+id/txt_kota_tujuan"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="23"
                        android:text="Jakarta (JKT)"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="40"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbl_tgl_muat"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="24"
                        android:text="Tanggal Pengiriman :"
                        android:textSize="9sp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="40"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_waktu_pengiriman"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:textSize="9sp"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="50"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="50"
                        android:paddingVertical="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbl_status"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:text="Status :"
                            android:textSize="9sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_status_pengiriman"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="Jakarta (JKT)"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="60"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="50"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="22"
                            android:text="Jenis Kendaraaan"
                            android:textSize="9sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=":"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_type_truck"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="26"
                            android:text="Jakarta (JKT)"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="60"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="50"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="22"
                            android:text="Kategori barang"
                            android:textSize="9sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text=":"
                            android:gravity="center"
                            android:textSize="9sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_kategori_barang"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="26"
                            android:text="Jakarta (JKT)"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>